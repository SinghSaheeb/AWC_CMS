@page
@{
    ViewBag.Title = "Base Course Tenure";
}

@await Component.InvokeAsync("Breadcrumb", new
{
    pageTitle = "Base Course Tenure",
    breadcrumbItems = new List<Item>
    {
        new Item { Title = "Dashboard", Url = "/Dashboard", IsActive = false },
        new Item { Title = "Masters", Url = "javascript:void(0)", IsActive = false },
        new Item { Title = "Base Course Tenure", Url = "javascript:void(0)", IsActive = true }
    }
})

@await Component.InvokeAsync("SectionTable", new
{
    sectionId = "BaseCourseTenure",
    buttonText = "Add Base Course Tenure",
    tableHeaders = new List<string> { 
        "#", 
        "Serial Number",
        "Base Course Name",
        "Strength",
        "Start Date",
        "End Date",
        "Registration Start",
        "Registration End",
        "Is Active",
        "Action" 
    }
})

<div class="modal fade" id="baseCourseTenureModal" tabindex="-1" aria-labelledby="baseCourseTenureModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="baseCourseTenureModalLabel">Add/Edit Base Course Tenure</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="baseCourseTenureForm" class="row g-3">
                    <input type="hidden" id="baseCourseTenureId" />
                    @Html.AntiForgeryToken() <!-- CSRF Token -->

                    <div class="col-6">
                        <div class="form-floating">
                            <input type="text" id="serialNumber" class="form-control" placeholder="" required />
                            <label for="serialNumber">Serial Number</label>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-floating">
                            @await Component.InvokeAsync("MaestroDropdown", new { viewType = "Base Course", selectId = "ddlBaseCourse", isRequired = true, isInvalid = true })
                            <label for="ddlBaseCourse">Base Course</label>
                        </div>
                    </div>

                    <div class="col-6">
                        <div class="form-floating">
                            <input type="number" id="strength" class="form-control" placeholder="" required />
                            <label for="strength">Strength</label>
                        </div>
                    </div>

                    <div class="col-6">
                        <div class="form-floating">
                            <select id="isActive" class="form-control" required>
                                <option value="true">Active</option>
                                <option value="false">Inactive</option>
                            </select>
                            <label for="isActive">Is Active</label>
                        </div>
                    </div>

                    <div class="col-6">
                        <div class="form-floating">
                            <input type="date" id="startDate" class="form-control" required />
                            <label for="startDate">Start Date</label>
                        </div>
                    </div>

                    <div class="col-6">
                        <div class="form-floating">
                            <input type="date" id="endDate" class="form-control" required />
                            <label for="endDate">End Date</label>
                        </div>
                    </div>

                    <div class="col-6">
                        <div class="form-floating">
                            <input type="date" id="registrationStartDate" class="form-control" required />
                            <label for="registrationStartDate">Registration Start Date</label>
                        </div>
                    </div>

                    <div class="col-6">
                        <div class="form-floating">
                            <input type="date" id="registrationEndDate" class="form-control" required />
                            <label for="registrationEndDate">Registration End Date</label>
                        </div>
                    </div>

                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="@Url.Content("~/Pages/Masters/BaseCourseTenure.cshtml.js")"></script>
}