                    <hr />
                    <div class="row">
                        <div class="col">
                            <table class="table table-bordered" id="technicalQualificationsTable">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Qualification</th>
                                        <th class="d-none">QualificationId</th>
                                        <th>Institution</th>
                                        <th>Year of Passing</th>
                                        <th>Division / Class</th>

                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Dynamic content -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
