@page
@{
    ViewBag.Title = "Officer";
}

@await Component.InvokeAsync("Breadcrumb", new
{
    pageTitle = "Officer",
    breadcrumbItems = new List<Item>
    {
        new Item { Title = "Dashboard", Url = "/Dashboard", IsActive = false },
        new Item { Title = "HR", Url = "javascript:void(0)", IsActive = false },
        new Item { Title = "Personal & Service Particulars", Url = "javascript:void(0)", IsActive = false },
        new Item { Title = "Officer", Url = "javascript:void(0)", IsActive = true }
    }
})

<section class="section">
    <form id="OfficerForm">
        @Html.AntiForgeryToken() <!-- CSRF Token -->
        <div class="card">
            <div class="card-body">
                <br />
                <div class="row">
                    <!-- Save and Reset Buttons aligned left -->
                    <div class="col">
                        <button class="btn btn-primary me-2" type="submit" title="Save">
                            <i class="bi bi-save"></i> Save
                        </button>
                        <button class="btn btn-secondary" id="resetBtn" title="Reset" onclick="location.reload();">
                            <i class="bi bi-arrow-clockwise"></i> Reset
                        </button>
                    </div>
                </div>
                <hr />
                <h5 class="card-title">
                    Basic Details
                </h5>
                <div class="row">
                    <div class="col">
                        <div class="form-floating">
                            @await Component.InvokeAsync("MaestroDropdown", new { viewType = "Army Type", selectId = "ddlService", isRequired = true, isInvalid = true })
                            <label for="ddlService">Service</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            @await Component.InvokeAsync("MaestroDropdown", new { viewType = "Role", selectId = "ddlStaffRole", isRequired = true, isInvalid = true })
                            <label for="ddlStaffRole">Staff Role</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            <select class="form-select is-invalid" id="ddlPostedTo" required>
                                <option value="">Select</option>
                                <option value="ArmyAviation">Army Aviation Corps (AAC)</option>
                                <option value="ParaSF">Parachute Regiment (Special Forces Wing)</option>
                                <option value="GarudCommando">Garud Commando Force (Air Force Wing)</option>
                                <option value="NavalAviation">Naval Aviation Wing</option>
                                <option value="SignalWing">Corps of Signals (Signal Wing)</option>
                                <option value="ICWing">Intelligence Corps (IC Wing)</option>
                                <option value="JAGBranch">Judge Advocate General's (JAG) Branch</option>
                                <option value="ProvostCorps">Provost Corps (Military Police Wing)</option>
                            </select>
                            <label for="ddlPostedTo">Posted To</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            <input type="text" id="txtPersonalNumber" name="persNo" class="form-control is-invalid" required pattern="^[A-Za-z]{2}\d{5}[A-Za-z]{1}$" maxlength="8" title="Enter a valid code (e.g., IC12345A)." placeholder="">
                            <label for="txtPersonalNumber">Personal Number</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            <input type="text" class="form-control is-invalid" required id="txtName" maxlength="50" placeholder="">
                            <label for="txtName">Name</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            <input type="text" class="form-control is-invalid" required id="txtInitials" maxlength="5" placeholder="Initials">
                            <label for="txtInitials">Initials</label>
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col">
                        <div class="form-floating">
                            @await Component.InvokeAsync("Rank", new { selectId = "ddlSubstantiveRank", isRequired = true, isInvalid = true })
                            <label for="ddlSubstantiveRank">Substantive Rank</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            <input type="date" class="form-control is-invalid" required id="dtSubstantiveRankDate" placeholder="">
                            <label for="dtSubstantiveRankDate">Substantive Rank Date</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            @await Component.InvokeAsync("Rank", new { selectId = "ddlActingRank" })
                            <label for="ddlActingRank">Acting Rank</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            <input type="date" class="form-control" id="dtActingRankDate" placeholder="">
                            <label for="dtActingRankDate">Acting Rank Date</label>
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col">
                        <div class="form-floating">
                            <input type="date" class="form-control is-invalid" required id="dtCommissionDate" placeholder="">
                            <label for="dtCommissionDate">Date of Commission</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            <input type="date" class="form-control is-invalid" required id="dtSeniorityDate" placeholder="">
