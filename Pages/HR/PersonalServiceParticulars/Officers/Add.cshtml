                            <label for="ddlGorkhaRegiment">Gorkha Regiment</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            @await Component.InvokeAsync("MaestroDropdown", new { viewType = "Commission Type", selectId = "ddlCommissionType", isRequired = true, isInvalid = true })
                            <label for="ddlCommissionType">Commission Type</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            @await Component.InvokeAsync("MaestroDropdown", new { viewType = "Religion", selectId = "ddlReligion", isRequired = true, isInvalid = true })
                            <label for="ddlReligion">Religion Domination</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            @await Component.InvokeAsync("MaestroDropdown", new { viewType = "Medical", selectId = "ddlMedical" })
                            <label for="ddlMedical">Medical Category</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            @await Component.InvokeAsync("MaestroDropdown", new { viewType = "Blood Group", selectId = "ddlBloodGroup" })
                            <label for="ddlBloodGroup">Blood Group</label>
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="txtAuthority" maxlength="50" placeholder="">
                            <label for="txtAuthority">Authority</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="txtPlaceOfBirth" maxlength="50" placeholder="">
                            <label for="txtPlaceOfBirth">Place of Birth</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="txtNationality" maxlength="50" placeholder="">
                            <label for="txtNationality">Nationality</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="txtMotherTongue" maxlength="50" placeholder="">
                            <label for="txtMotherTongue">Mother Tongue</label>
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="txtPreviousOccupation" maxlength="50" placeholder="">
                            <label for="txtPreviousOccupation">Previous Occupation</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="txtCdaAccountNumber" maxlength="50" placeholder="">
                            <label for="txtCdaAccountNumber">CDA (O) Account Number</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="txtIdentityCardNumber" maxlength="50" placeholder="">
                            <label for="txtIdentityCardNumber">Identity Card Number</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-floating">
                            <input type="text" class="form-control" id="txtIdentificationMarks" maxlength="50" placeholder="">
                            <label for="txtIdentificationMarks">Identification Marks</label>
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col">
                        <div class="form-floating">
                            <input type="date" class="form-control" id="txtPostingDate" placeholder="">
                            <label for="txtPostingDate">Posting Date</label>
                        </div>
                    </div>
                </div>

                <h5 class="card-title">
                    Academic Details
                </h5>
                <div class="border border-primary p-3">
                    <div class="row">
                        <div class="col">
                            <div class="form-floating">
                                <input type="text" class="form-control is-invalid" id="txtSchoolName" maxlength="100" placeholder="">
                                <label for="txtSchoolName">School/College Name</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-floating">
                                <input type="number" step="1" min="0" max="9999" class="form-control is-invalid" id="txtExaminationYear" placeholder="" oninput="this.value = this.value.slice(0, 4);">
                                <label for="txtExaminationYear">Examination Year</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-floating">
                                <select class="form-select is-invalid" id="ddlAcademicDetailsDivisionClass">
                                    <option value="">Select</option>
                                    <option value="I">I</option>
                                    <option value="II">II</option>
                                    <option value="III">III</option>
                                    <option value="Q">Q</option>
                                </select>
                                <label for="ddlAcademicDetailsDivisionClass">Division / Class</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-floating">
                                @await Component.InvokeAsync("MaestroDropdown", new { viewType = "Examination", selectId = "ddlExamination", isInvalid = true })
                                <label for="ddlExamination">Examination</label>
                            </div>
                        </div>
                        <div class="col">
                            <button id="addAcademicDetailsTableBtn" type="button" class="btn btn-primary btn-lg" onclick="addAcademicDetailsRow()"><i class="bi bi-plus-circle"></i></button>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col">
                            <table class="table table-bordered" id="academicDetailsTable">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Name of School / Collage</th>
                                        <th>Examination Year</th>
                                        <th>Division / Class</th>
                                        <th class="d-none">ExaminationId</th>
                                        <th>Examination</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Dynamic content -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <h5 class="card-title">
                    Professional / Technical Qualifications
                </h5>
