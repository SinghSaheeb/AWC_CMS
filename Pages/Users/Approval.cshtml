@page
@{
    ViewBag.Title = "Users's Approval";
}

@await Component.InvokeAsync("Breadcrumb", new
{
    pageTitle = "Approval",
    breadcrumbItems = new List<Item>
    {
        new Item { Title = "Dashboard", Url = "/Dashboard", IsActive = false },
        new Item { Title = "Users", Url = "javascript:void(0)", IsActive = false },
        new Item { Title = "Approval", Url = "javascript:void(0)", IsActive = true }
    }
})

@await Component.InvokeAsync("SectionTable", new
    {
        sectionId = "UsersApproval",
        tableClasses = "table table-bordered border-primary",
        tableHeaders = new List<string> {
            "#",
            "Personal Number",
            "Name",
            "Email",
            "Mobile",
            "Created At",
            "Action / Status"
        }
    })

<!-- User Approval Modal -->
<div class="modal fade" id="userApprovalModal" tabindex="-1" aria-labelledby="userApprovalModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="userApprovalModalLabel"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="userApprovalForm" class="row g-3">
                    <input type="hidden" id="userId" />
                    @Html.AntiForgeryToken() <!-- CSRF Token -->
                    <div class="col-12">
                        <ul class="list-group">
                            <li class="list-group-item"><i class="bi bi-person me-1 text-primary"></i> Username: <label id="lblUsername"></label></li>
                            <li class="list-group-item"><i class="bi bi-phone me-1 text-primary"></i> Mobile: <label id="lblUserMobile"></label></li>
                            <li class="list-group-item"><i class="bi bi-envelope me-1 text-primary"></i> Email: <label id="lblUserEmail"></label></li>
                        </ul>
                    </div>
                    <div class="col-12">
                        <div class="form-floating">
                            <textarea type="text" id="Remark" class="form-control" placeholder="" maxlength="255" required></textarea>
                            <label for="Remark">Remark</label>
                        </div>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="@Url.Content("~/Pages/Users/Approval.cshtml.js")"></script>
}